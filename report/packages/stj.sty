%commando om logo Sint-Jozefinstituut te tekenen
\newlength{\fw}
\newlength{\hh}
\newlength{\lw}
\newlength{\dw}
\newlength{\rr}
\newlength{\rs}
\newcommand{\sjlogo}[1][1.5cm]{
  \begin{tikzpicture}
    \setlength{\fw}{#1}  		%breedte van het logo, is parameter #1
    \setlength{\hh}{0.24\fw}    %halve hoogte van het logo
    \setlength{\lw}{0.22\hh}    %dikte van één lijn
    \setlength{\dw}{0.05\hh}    %afstand tussen de twee lijnen
    \setlength{\rr}{0.3\hh}     %straal van bovenste cirkel
    \setlength{\rs}{0.4\hh}     %straal van middelste cirkel moet steeds 1-2\rr
    \coordinate (a) at (-\hh,0);
    \coordinate (r) at (1.7071\hh,1.7071\hh);
    \coordinate (s) at (-2.4142\hh,0);
    \draw[line width=\lw, double distance=\dw] 
       (a) arc (-180:-45:\hh) -- ++(r) -- ++(s) arc (90:270:\rr) arc (90:-180:\rs);
  \end{tikzpicture}
}

